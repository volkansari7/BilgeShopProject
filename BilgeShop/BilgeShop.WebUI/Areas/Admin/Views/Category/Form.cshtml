@model CategoryFormViewModel

@{
    ViewData["Title"] = "Form";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb my-4">
    <li class="breadcrumb-item active">Kategori Ekle</li>
</ol>

<div class="row">
    <div class="col-12">
        <form method="post" asp-area="Admin" asp-controller="Category" asp-action="Save">
            <input type="hidden" asp-for="Id" />
            <div class="mb-2">
                <label asp-for="Name"></label>
                <input asp-for="Name" type="text" class="form-control" />
                <span class="text-danger fw-bold mt-1" asp-validation-for="Name"></span>
            </div>

            <div class="mb-2">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            </div>

            <button type="submit" class="btn btn-success mt-3 float-end">Formu Gönder</button>

        </form>
    </div>
</div>


<script>
    var Error = "@ViewBag.ErrorMessage";
    if (Error != "") {
        Swal.fire({
            icon: 'error',
            title: 'Hata!',
            text: Error
        })
    }
</script>