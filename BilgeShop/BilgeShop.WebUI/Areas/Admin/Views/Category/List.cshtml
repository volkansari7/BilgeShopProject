@model List<CategoryListViewModel>

@{
    ViewData["Title"] = "List";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<ol class="breadcrumb my-4">
    <li class="breadcrumb-item active">Kategori Listesi</li>
</ol>

<table class="table table-striped">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td><a class="btn btn-outline-warning" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id">Sil</a></td>
            <td><a class="btn btn-outline-dark" asp-controller="Category" asp-action="Update" asp-route-id="@item.Id">Düzenle</a></td>
        </tr>
    }
</table>
