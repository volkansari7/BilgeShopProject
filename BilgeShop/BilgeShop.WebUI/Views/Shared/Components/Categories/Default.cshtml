@model List<CategoryViewModel>


<div class="list-group">
    <a asp-controller="Home" asp-action="Index" asp-route-categoryId="" asp-route-categoryName="" class="list-group-item fw-bold">Tüm Ürünler</a>
    @foreach (var item in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-categoryId="@item.Id" asp-route-categoryName="@item.Name" class="list-group-item list-group-item-action">@item.Name</a>
    }
</div>